{% extends "XvolutionsAdminBundle:template:backoffice.html.twig" %}

{% block title %}Categorias - Backoffice{% endblock %}

{% block maincontent %}
    <h1>{{ "Categorias"|trans }}</h1>
        <div id="status" class="alert alert-success alert-dismissable" style="display: none;">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <div id="text"></div>
        </div>
        <div id="error" class="alert alert-danger alert-dismissable" style="display: none;">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <div id="text-error"></div>
        </div>
    {% if status %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{ status|trans }}
        </div>
    {% endif %}
    {% if error %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{ error|trans }}
        </div>
    {% endif %}
    <table class="table table-hover">
        <tr>
            <th></th>
            <th>{{ "Categorias"|trans }}</th>
            <th>{{ "Opções"|trans }}</th>
        </tr>
        {% if categoryList|length > 0 %}

            {% for category in categoryList %}
                <tr class="tr{{category.id}}">
                    <td><input type="checkbox" id="{{category.id}}" onclick="SelectForRemoval('{{category.id}}');"></td>
                    <td>{{category.category}}</td>
                    <td>
                        <a href="{{path('editcategories', {'id': category.id})}}" type="submit" class="btn btn-primary btn-xs">{{ "Editar"|trans }}</a> 
                        <a class="btn btn-danger btn-xs" name="{{path('optioncategories', {'option': 'remove','id': category.id})}}">{{ "Apagar"|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="7" >{{"Não existem Categorias definidas"|trans}}</td>
            <tr>
        {% endif %}
    </table>
    <p>
        <a href="{{path('addcategories')}}" type="submit" class="btn btn-primary btn-sm">{{ "Criar uma nova categoria"|trans }}</a>
        <a class="btn btn-danger btn-sm" name="{{path('optioncategories', {'option': 'removeselected'})}}" id="RemoveMany">{{ "Apagar"|trans }}</a>
    </p> 
{% endblock %}